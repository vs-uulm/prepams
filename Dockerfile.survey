# syntax=docker/dockerfile:1

FROM node:20

COPY --from=ghcr.io/vs-uulm/prepams/shared /prepams/shared/pkg /prepams/shared/pkg

WORKDIR /prepams/survey/
COPY survey/package*.json /prepams/survey/
RUN npm install

WORKDIR /prepams/survey/
COPY survey .
EXPOSE 8080

WORKDIR /prepams/survey/
CMD ["node", "index.js"]

